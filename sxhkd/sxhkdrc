alt + p
  dmenu_run

#---BSPWM Bindings
# Quit bspwm
alt + shift + q
  bspc quit

# restart polybar
alt + shift + p
  killall polybar && polybar bar &

# Restart bspwm
alt + shift + r
  bspc wm -r

# Kill Window 
alt + c
  bspc node --close

# Focus on window in direction
alt + {h,j,k,l}
	bspc node -f {west,south,north,east}

# Send window to desktop
alt + shift + {0-9}
  bspc node --to-desktop {0-9}

# Swap nodes the tree from the current nodes parent
alt + shift + {Up, Down}
  bspc node @parent -C {forward, backward}

# Rotate the tree from the current nodes parent
alt + shift + {Right, Left}
	bspc node @parent --rotate {90,270}

# Flip the tree from the current nodes parent
super + control + {h,j,k,l}
  bspc node @parent -F {vertical,horizontal,horizontal,vertical}

# Swap window with direction
alt + shift + {h,j,k,l}
	bspc node -s {west,south,north,east}

# Focus on desktop
alt + {0-9}
  bspc desktop -f {0-9}

# Expand a window by moving one of its side outward
ctrl + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
  #xdo resize {-w -20, -h +20, -h -20, -w +20}

# Contract a window by moving one of its side inward
#ctrl + alt + shift + {h,j,k,l}
#	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
  #xdo resize {-w +20, -h -20, -h +20, -w -20}

#---System Control---#
# Restart hotkey damon
alt + shift + x
  killall sxhkd ; sxhkd &

# Lock the screen
#super + shift + e
#  betterlockscreen -l

alt + {Left, Right}
  pamixer {--decrease, --increase} 10

#alt + shift + p
#  killall polybar ; polybar bar &

# Brightness
alt + {Up, Down}
  light {-A 5, -U 5}

alt + space
  $TERMINAL

alt + b
  $BROWSER

alt + e
  emacs

alt + shift + space
  bspc node -t \~fullscreen

alt + r
  books

alt + f
  kitty sh -c vifmrun
  

alt + shift + t
  bspc node -t \~floating

